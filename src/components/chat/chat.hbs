<div class="chat">
<div class="chat__list">
  {{{ chatList }}}
</div>
<div class="chat__main">
  <div class="header">
    <div class="photo-container">
      {{#if avatar}}
        <img class="photo__avatar" alt="avatar" src="https://ya-praktikum.tech/api/v2/resources{{avatar}}">
      {{/if}}
      <span class="username">{{name}}</span>
    </div>
    {{#if selectedChat }}
    <span class="button__menu">
        {{{ menuButton }}}
    </span>
    {{/if}}
  </div>
  <div class="space">
    {{{ popupWithUsersCard }}}
    {{#if selectedChat }}
      <div class="space__chats">
        {{#each messages}}
          {{{this}}}
        {{/each}}
      </div>
    {{else}}
      <span class="no-open-chat">Выберите чат чтобы отправить сообщение</span>
    {{/if}}
  </div>
  <div class="message">
    {{{ buttonAttachment }}}
    <form class="form">
      {{{ message }}}
    </form>
      {{{ buttonSendMessage }}}
  </div>
  {{{ popupMenu }}}
  {{{ popupAddUser }}}

